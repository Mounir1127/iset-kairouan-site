{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2019",
        "outDir": "./dist-server",
        "skipLibCheck": true,
        "types": [
            "node",
            "express",
            "mongoose"
        ]
    },
    "include": [
        "src/server-api.ts",
        "src/models/**/*.ts"
    ]
}